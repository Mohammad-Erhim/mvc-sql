    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="main" >
<div class="item-details">
            <div   class="item">

                                

                <div class="item__image">
                    <img  src="/<%= product.imageUrl %>"
                        alt="<%= product.title %>">
                </div>
                <div><h1 >
                    <%= product.title %>
                </h1>
                    <h2  >$<%= product.price %>
                    </h2>
                    <p  >
                        <%= product.description %>
                    </p>
                </div>
                <div class="item__group-btn">

                    <% if (isAuthenticated) { %>
                        <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                            <% } %>
                </div>
            </div></div>
        </main>
        <%- include('../includes/end.ejs') %>