<body>
   <%- include('../includes/navigation.ejs') %>

    <main class="main">
        <div class="item-form-container">
       
        <form action="/new-password" method="POST">
            <h1>New Password</h1><br>
            <div class="input-control">
                <label for="password">Password</label>
                <input placeholder="Password" type="password" name="password" id="password" value="<%= oldInput.password %>"  required >
            </div>
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Update Password</button> <% if (errorMessage) { %>
            <span class="err"><%= errorMessage %></span>
        <% } %>
        </form></div>
    </main>
<%- include('../includes/end.ejs') %>